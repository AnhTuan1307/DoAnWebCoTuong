
@{
    ViewBag.Title = "Room";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button class="snip1582" onclick="window.location.href='@Url.Action("ChessBoard", "Home")'">Tạo Bàn Mới</button>
<button class="snip1582">Các Bàn Chơi</button>
<img src="~/Content/image/DANHSACHPHONG.png" alt="" style="position:absolute;width: 42%;margin-left: 428px;top: 10%;">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
<div class="form-container">
    <!-- phần list danh sách phòng -->
    <div class="listRoom">
        <table class="table">
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Mã Phòng</th>
                <th scope="col">Tên Phòng</th>
                <th scope="col">Trạng Thái</th>
                @*<th scope="col">Join</th>*@
            </tr>
        </table>
    </div>
</div>


<script>
    $(document).ready(function () {
            $('.table tr td').remove();
            $.ajax({
                type: "GET",
                dataType: "json",
                url: "../api/GetAllRoom",
                /*data: source,*/
                success: function (data) {
                    $(data.roomList).each(function (index, element) {
                        $('.table').append("<tr><td>" + index + "</td><td>" + element.MAPHONG + "</td><td>" + element.TENPHONG + "</td>" + "</td><td>" + element.TRANGTHAI + "</td>");
                    })
                },
                error: function (error) {
                    jsonValue = jQuery.parseJSON(error.responseText);
                    alert("error" + error.responseText);
                }
            });
    })
</script>



